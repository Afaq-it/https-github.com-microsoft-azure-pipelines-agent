FROM mcr.microsoft.com/dotnet/aspnet:3.1-focal-arm64v8 AS base
WORKDIR /app
EXPOSE 80
FROM mcr.microsoft.com/dotnet/sdk:3.1.416-focal-arm64v8 AS test
COPY /src /src
WORKDIR /src
RUN apt-get update
RUN apt-get install unzip
RUN ./dev.sh l1
FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ./dev.sh l1
